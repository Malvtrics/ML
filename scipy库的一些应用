--求解方程
from scipy.optimize import fsolve

def f(i):
    x = i[0]
    y = i[1]
    z = i[2]
    return [2363.98*((1+x)**7)-5000,
            10306.4*((1+y)**7)-20000,
            10460*((1+z)**7)-20000]

result = fsolve(f, [0,0,0])
print(result)

